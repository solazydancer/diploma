.body
  .well#person_well
    = form_for @source_person do |f|
      - if @source_person.errors.any?
        #error_explanation
          %h2= "#{pluralize(@source_person.errors.count, "error")} prohibited this source_person from being saved:"
          %ul
            - @source_person.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label 'Фамилия:'
        %br/
        = f.text_field :last_name
      %br/
      .field
        = f.label 'Имя:'
        %br/
        = f.text_field :first_name
      %br/
      .field
        = f.label 'Отчество'
        %br/
        = f.text_field :second_name
      %br/
      .field
        = f.label 'Идентификатор в системе НИЯУ МИФИ:'
        %br/
        = f.number_field :mephi_id
      %br/
      .actions
        = f.submit 'Save'
